<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<h2> Add a Comment </h2>
<%= render "comments/form"%>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <%= render "comments/comment", comment: comment %>
<% end %>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), method: :delete %></li>
</ul>